<div class="player-dashboard col-md-6">
  <h2><%= player.name %></h2>
   <%= form_tag player_path(player), method: :put do %>
    <table>
      <tr>
        <th>Size: </th>
        <td><%=player.size || "Waiting for race"%></td>
      </tr>
      <tr>
        <th>Weight:</th>
        <td><%=player.weight || "Waiting for race"%></td>
      </tr>
      <tr>
        <th>Wage: </th>
        <td><%= player&.character_class&.wage || "Waiting for class" %></td>
      </tr>
      <tr>
        <th>Money: </th>
        <td><%= text_field_tag :money, player.money %></td>
      </tr>
      <tr>
        <th>Life points: </th>
        <td><%= text_field_tag :life_point, player.life_point %></td>
      </tr>
    </table>
    <%= submit_tag "Enregistrer", class: "btn btn-success" %>
  <% end %>
</div>